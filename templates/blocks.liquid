{% layout "listing" %}
{% block content %} 

<h1>Blocks</h1>
<p>Here should go a grid of all the different blocks (aka. modules)</p>
<div class="modulesList">
	{% collection "blocks" %}
	  {% for post in collection.items %}
	  <div>
	  	<h2><a href="{{ post.slug }}">{{ post.title }}</a></h2>
	  	<p>I need a description here</p>
	  </div>
	  {% endfor %}
	{% endcollection %}
</div>
{% endblock %}